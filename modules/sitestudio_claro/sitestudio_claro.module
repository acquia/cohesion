/**
 * Helper function that checks the existing of a template.
 * @param $path
 * @param $template
 * @return bool
 */
function sitestudio_claro_template_exists($path, $template) {
  return file_exists(DRUPAL_ROOT . '/' . $path . '/' . $template . '.html.twig');
}
