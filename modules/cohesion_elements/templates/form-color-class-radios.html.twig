{#
/**
 * @file
 * Default theme implementation to display a file form widget.
 *
 * Available variables:
 * - element: Form element for the file upload.
 * - attributes: HTML attributes for the containing element.
 *
 * @see template_preprocess_file_managed_file()
 *
 * @ingroup themeable
 */
#}
{%
  set classes = [
  'js-form-color-classes',
  'form-color-classes',
  'coh-category-color-fieldset-inner'
]
%}
<fieldset class="coh-category-color-fieldset">
  <div{{ attributes.addClass(classes) }}>
    <legend class="coh-category-color-legend">{{ 'Color'|t }}</legend>
    {% for item in element['#options'] %}
      <div class="coh-category-color-item {{ item }}">
          <input class="coh-category-color-input" id="coh-component-{{ item }}" name="{{ element['#name'] }}" type="radio" value="{{ item }}" {% if element['#value'] == item %}checked{% endif %}/>
          <label class="coh-category-color-label" for="coh-component-{{ item }}"><span class="visually-hidden">{{ item }}</span></label>
      </div>
    {% endfor %}
  </div>
</fieldset>
